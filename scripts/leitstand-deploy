#!/usr/bin/env bash
set -euo pipefail

# --- Deprecation Notice ---
echo "⚠️  DEPRECATION WARNING: 'leitstand-deploy' is deprecated."
echo "    Please use 'leitstand-up' instead."
echo "    This wrapper will be removed in a future version."
echo ""
echo "    Forwarding to leitstand-up..."
echo ""

# --- Configuration ---
# Resolve repo root robustly to handle calls from anywhere (e.g. cron/scripts)
if ! REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null)"; then
    echo "❌ Error: Not inside a git repository." >&2
    exit 1
fi

# Forward all arguments to leitstand-up
exec "$REPO_ROOT/scripts/leitstand-up" "$@"
