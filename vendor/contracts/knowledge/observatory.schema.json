{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/knowledge/observatory.schema.json",
  "title": "Knowledge Observatory Artifact",
  "type": "object",
  "required": [
    "generated_at",
    "source",
    "topics",
    "observatory_id"
  ],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "observatory_id": {
      "type": "string",
      "minLength": 1
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "signals": {
      "type": "object"
    },
    "blind_spots": {
      "type": "array"
    },
    "considered_but_rejected": {
      "type": "array"
    }
  },
  "additionalProperties": false
}
